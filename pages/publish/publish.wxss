.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.cancel-btn {
  color: #666;
  font-size: 30rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
}

.publish-btn {
  color: #1677ff;
  font-size: 30rpx;
  font-weight: 500;
}

/* 内容编辑区域 */
.editor-container {
  padding: 120rpx 30rpx 20rpx;
}

.content-editor {
  width: 100%;
  min-height: 300rpx;
  background-color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  line-height: 1.6;
  placeholder-color: #999;
}

.word-count {
  text-align: right;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 标签选择 */
.tags-section {
  padding: 0 30rpx 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  padding: 12rpx 25rpx;
  background-color: white;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.tag-item.selected {
  background-color: #1677ff;
  color: white;
  border-color: #1677ff;
}

/* 匿名选项 */
.anonymous-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: white;
  margin: 0 30rpx 20rpx;
}

/* 媒体工具栏 */
.media-toolbar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: white;
  margin: 0 30rpx 20rpx;
  border-radius: 15rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}

.tool-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.tool-text {
  font-size: 24rpx;
  color: #666;
}

/* 图片预览区域 */
.image-preview {
  padding: 0 30rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.preview-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}

.preview-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

/* 语音预览区域 */
.voice-preview {
  padding: 0 30rpx 20rpx;
}

.voice-item {
  background-color: white;
  padding: 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.voice-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.voice-duration {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}
  border-radius: 15rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333;
}

/* 底部安全区域适配 */
.bottom-safe-area {
  height: 30rpx;
}