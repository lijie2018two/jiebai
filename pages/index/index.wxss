.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 2rpx solid #1677ff;
  border-radius: 30rpx 0 0 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.search-btn {
  background-color: #1677ff;
  color: white;
  border-radius: 0 30rpx 30rpx 0;
  height: 64rpx;
  width: 120rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分类标签样式 */
.category-scroll {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.category-item {
  display: inline-block;
  padding: 10rpx 25rpx;
  margin-right: 15rpx;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.category-item.active {
  background-color: #1677ff;
  color: white;
}

/* 热门标签区域 */
.hot-tags-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  background-color: #e8f0fe;
  color: #1677ff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  position: relative;
}

.hot-tag {
  position: absolute;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  padding: 0 5rpx;
  border-radius: 5rpx;
  top: -5rpx;
  right: -5rpx;
}

/* 最新发布区域 */
.latest-posts-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.tag-more {
  color: #888;
  font-size: 26rpx;
}

.posts-list {
  height: 400rpx;
}

.post-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.post-content {
  flex: 1;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
}

.post-time {
  color: #888;
  font-size: 24rpx;
}

.post-text {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.post-actions {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.like-count {
  color: #888;
  font-size: 24rpx;
}