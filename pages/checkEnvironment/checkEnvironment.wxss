.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 30rpx 0;
  color: #333;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 30rpx 0;
}

.result-container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.result-box {
  height: 500rpx;
  background-color: #f9f9f9;
  padding: 10rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #333;
}