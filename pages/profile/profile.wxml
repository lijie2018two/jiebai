<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <image class="user-avatar" src="/images/avatar-default.svg"></image>
    <view class="user-info">
      <text class="username">未登录</text>
      <text class="user-desc">点击登录，分享你的故事</text>
    </view>
    <button class="login-btn" bindtap="handleLogin">登录</button>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <view class="menu-item">
      <image class="menu-icon" src="/images/collection.svg"></image>
      <text class="menu-text">我的收藏</text>
      <image class="arrow-icon" src="/images/arrow-right.svg"></image>
    </view>
    <view class="menu-item">
      <image class="menu-icon" src="/images/my-posts.svg"></image>
      <text class="menu-text">我的发布</text>
      <image class="arrow-icon" src="/images/arrow-right.svg"></image>
    </view>
    <view class="menu-item">
      <image class="menu-icon" src="/images/settings.svg"></image>
      <text class="menu-text">设置</text>
      <image class="arrow-icon" src="/images/arrow-right.svg"></image>
    </view>
    <view class="menu-item">
      <image class="menu-icon" src="/images/help.svg"></image>
      <text class="menu-text">帮助与反馈</text>
      <image class="arrow-icon" src="/images/arrow-right.svg"></image>
    </view>
  </view>

  <!-- 关于区域 -->
  <view class="about-section">
    <text class="about-text">婕白树洞 v1.0.0</text>
    <text class="copyright-text">© 2023 婕白树洞 版权所有</text>
  </view>
</view>