.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #1677ff;
  padding: 60rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
  color: white;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: white;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.login-btn {
  background-color: white;
  color: #1677ff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 50rpx;
  font-size: 26rpx;
}

/* 功能菜单 */
.menu-list {
  margin: 20rpx;
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 25rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 关于区域 */
.about-section {
  margin: 20rpx;
  padding: 30rpx;
  text-align: center;
  color: #888;
}

.about-text {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.copyright-text {
  font-size: 22rpx;
  opacity: 0.8;
}