.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.back {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.back image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.message-detail {
  width: 100%;
}

.avatar-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.name-time {
  flex: 1;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.time {
  font-size: 22rpx;
  color: #999;
}

.content {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.related-post {
  margin-top: 30rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}

.related-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.post-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-right: 20rpx;
}

.post-preview image {
  width: 40rpx;
  height: 40rpx;
}